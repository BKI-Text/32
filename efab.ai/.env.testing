# Testing Environment Configuration
ENVIRONMENT=testing
DEBUG=false
TESTING=true

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_NAME=:memory:
DATABASE_ECHO_QUERIES=false

# Security Configuration
SECRET_KEY=test-secret-key-for-testing-only
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_DAYS=1

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_WORKERS=1

# Logging Configuration
LOG_LEVEL=WARNING
LOG_TO_CONSOLE=false
LOG_TO_FILE=false

# ML Configuration
ML_ENABLE_TRAINING=false
ML_AUTO_RETRAIN=false
ML_MODEL_DIRECTORY=models/test
ML_MODEL_CACHE_SIZE=1
ML_MODEL_CACHE_TTL=60

# Data Configuration
DATA_DIRECTORY=data/test
LIVE_DATA_DIRECTORY=data/test/live
BACKUP_DIRECTORY=data/test/backups
ENABLE_DATA_VALIDATION=true
ENABLE_DATA_QUALITY_FIXES=true
DATA_REFRESH_INTERVAL=60
DATA_BATCH_SIZE=100
MAX_BATCH_TIME=10

# Planning Configuration
PLANNING_HORIZON_DAYS=7
SAFETY_STOCK_DAYS=1
ENABLE_OPTIMIZATION=false
OPTIMIZATION_TIMEOUT=10

# Performance Configuration
DEFAULT_PAGE_SIZE=5
MAX_PAGE_SIZE=20

# Security Settings (lenient for testing)
MAX_FAILED_ATTEMPTS=100
LOCKOUT_DURATION_MINUTES=1
RATE_LIMIT_RPM=10000

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*