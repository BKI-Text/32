# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_NAME=beverlyknits_dev.db
DATABASE_ECHO_QUERIES=true

# Security Configuration
SECRET_KEY=dev-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=logs/dev.log

# ML Configuration
ML_ENABLE_TRAINING=true
ML_AUTO_RETRAIN=true
ML_MODEL_DIRECTORY=models/dev

# Data Configuration
DATA_DIRECTORY=data/dev
LIVE_DATA_DIRECTORY=data/dev/live
BACKUP_DIRECTORY=data/dev/backups
ENABLE_DATA_VALIDATION=true
ENABLE_DATA_QUALITY_FIXES=true

# Planning Configuration
PLANNING_HORIZON_DAYS=30
SAFETY_STOCK_DAYS=3
ENABLE_OPTIMIZATION=true

# Security Settings
MAX_FAILED_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=5
RATE_LIMIT_RPM=1000

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*